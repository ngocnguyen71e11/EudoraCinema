@model EudoraCinema.Models.PhimEnity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <link href="~/Content/phiminsertstyle.css" rel="stylesheet" />
    <title>Document</title>
</head>
<body>
    <header class="header"></header>
    <div class="un-head"></div>
    <div class="menu-back" style="display: flex;">
        <img class="img-logo" src="/logo.png" alt="">
        <div class="un-menu"></div>
        <div id="menu">
            <ul class="menu-khachhang">

                <li><a href="#">Item</a></li>
                <li><a href="#">Item</a></li>
                <li><a href="#">Item</a></li>
                <li><a href="#">Item</a></li>
                <li><a href="#">Item</a></li>
            </ul>
        </div>
    </div>
    <main class="form-content">
        <form action="">
            <div class="content">
                <form action="">
                    <h3>Thêm phim</h3>
                    <label for="">Tên phim: </label>
                    @Html.EditorFor(model => model.sTenphim, new { htmlAttributes = new { @class = "form-control" } })
                    <br />
                    <label>Thời lượng: </label>
                    @Html.EditorFor(model => model.sThoiluong, new { htmlAttributes = new { @class = "form-control" } })
                    <br />
                    <label for="">Ngày khởi chiếu: </label>
                    @Html.EditorFor(model => model.dNgaykhoichieu, new { htmlAttributes = new { @class = "form-control" } })

                    <br />
                    <label>Đạo diễn:</label>
                    @Html.EditorFor(model => model.sDaodien, new { htmlAttributes = new { @class = "form-control" } })
                    <br>
                    <label for="">Diễn viên: </label>                    
                    @Html.EditorFor(model => model.sDienvien, new { htmlAttributes = new { @class = "form-control" } })
                </form>
            </div>
            <div class="arr-ava">
                <form action="" class="form-ava">
                    <label for="">Mô tả: </label>
                    @Html.EditorFor(model => model.sMota, new { htmlAttributes = new { @class = "form-control form-ava_inp" } })
                    <label for="">Ngôn ngữ: </label>
                    @Html.EditorFor(model => model.sNgonngu, new { htmlAttributes = new { @class = "form-control form-ava_inp" } })
                    <div class="form-ava">
                        <div class="ava"></div>
                        <div class="choose-ava"><button>Chọn ảnh</button></div>
                    </div>

                </form>
            </div>
        </form>
    </main>

</body>
</html>

